<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.select="urn:import:org.gwtbootstrap3.extras.select.client.ui" xmlns:b.toggle="urn:import:org.gwtbootstrap3.extras.toggleswitch.client.ui"
	xmlns:c="urn:import:net.hus.core.client.ui.components">
	<ui:style>
	.pad {
		padding-right: 5px;
	}
	
	.spanformat {
		padding: 5px;
		border: solid thin;
	}
	</ui:style>

	<b:Row addStyleNames="content">
		<b:Column size="SM_12" addStyleNames="text-left">
			<b:Row>
				<b:Column size="SM_3">
					<b:Well size="LARGE">
						<b:Legend text="EDIT PROFILE" />
						<b:FormGroup>
							<b:FormLabel text="Select Profile:" addStyleNames="{style.pad}" />
							<b.select:Select ui:field="mProfiles" liveSearch="true" visible="true" />
						</b:FormGroup>
					</b:Well>
					<b:Well size="LARGE">
						<b:Legend text="CREATE NEW PROFILE" />
						<b:FormGroup>
							<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
							<b:Input ui:field="mAddProfiles" placeholder="Enter Profile Name" allowBlank="false" validateOnBlur="true" type="TEXT" />
						</b:FormGroup>
						<b:Tooltip text="Add New">
							<b:Icon ui:field="mAdd0" type="SAVE" paddingLeft="15" addStyleNames="pull-right" />
						</b:Tooltip>
					</b:Well>
				</b:Column>
				<b:Column size="SM_9">
					<b:TabPanel tabPosition="LEFT">
						<b:NavTabs>
							<b:TabListItem dataTarget="#tabp4" text="Name" active="true" />
							<b:TabListItem dataTarget="#tabp5" text="Values" />
						</b:NavTabs>
						<b:TabContent>
							<b:TabPane fade="true" in="true" active="true" b:id="tabp4">
								<b:Well size="LARGE">
									<b:Legend text="LOOKUP NAME" />
									<b:FormGroup>
										<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mName" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Display:" addStyleNames="{style.pad}" />
										<b:Input ui:field="mDisplay" type="TEXT" />
									</b:FormGroup>
									<b:Tooltip text="Save">
										<b:Icon ui:field="mSave0" type="SAVE" paddingLeft="10" addStyleNames="pull-right" />
									</b:Tooltip>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tabp5">
								<b:Well size="LARGE">
									<b:Legend text="VALUES IN LOOKUP" />
									<b:Form type="INLINE">
										<b:FieldSet>
											<b:FormGroup>
												<b:Input ui:field="mNewName" type="TEXT" placeholder="Enter name" />
											</b:FormGroup>
											<b:FormGroup>
												<b:Input ui:field="mNewAbbr" type="TEXT" placeholder="Enter abbreviation" />
											</b:FormGroup>
											<b:FormGroup>
												<b:Input ui:field="mNewSort" type="NUMBER" placeholder="Enter sort" />
											</b:FormGroup>
										</b:FieldSet>
									</b:Form>
									<b:Tooltip text="Save">
										<b:Icon ui:field="mSave1" type="SAVE" paddingTop="10" addStyleNames="pull-right" />
									</b:Tooltip>
									<b:FormGroup>
										<b:FormLabel ui:field="mNameText" />
										<c:FlexTable_View ui:field="mValues" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
						</b:TabContent>
						<b.html:ClearFix />
					</b:TabPanel>
				</b:Column>
			</b:Row>
		</b:Column>
	</b:Row>
</ui:UiBinder>