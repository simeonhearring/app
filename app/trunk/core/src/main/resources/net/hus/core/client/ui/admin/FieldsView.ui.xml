<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.select="urn:import:org.gwtbootstrap3.extras.select.client.ui">
	<ui:style>
	.row {
		
	}
	
	.sidenav {
		padding-top: 20px;
		background-color: #f1f1f1;
		height: 100%;
	}
	
	.pad {
		padding-right: 5px;
	}
	</ui:style>

	<b:Container fluid="true" addStyleNames="text-Center">
		<b:Row ui:field="mRow0" addStyleNames="content {style.row}">
			<b:Column ui:field="mL01" size="SM_1" addStyleNames="{style.sidenav}"></b:Column>
			<b:Column ui:field="mC01" size="SM_10" addStyleNames="text-center"></b:Column>
			<b:Column ui:field="mR01" size="SM_1" addStyleNames="{style.sidenav}"></b:Column>
		</b:Row>
		<b:Row ui:field="mRow1" addStyleNames="content {style.row}">
			<b:Column size="SM_1"></b:Column>
			<b:Column size="SM_10" addStyleNames="text-left">
				<b:Row>
					<b:Column size="SM_3">
						<b:Well size="LARGE">
							<b:FormGroup>
								<b:Heading text="Select Field" size="H4" />
								<b.select:Select ui:field="mSelect" liveSearch="true" visible="true" />
							</b:FormGroup>
						</b:Well>
						<b:Well size="LARGE">
							<b:Heading text="Add New Field" size="H4" />
							<b:FormGroup ui:field="mAddNameGrp">
								<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
								<b:TextBox ui:field="mAddName" placeholder="Enter Field Name" allowBlank="false" validateOnBlur="true" />
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel text="Type:" addStyleNames="{style.pad}" />
								<b:ListBox ui:field="mAddType" />
							</b:FormGroup>
							<b:Tooltip text="Add New">
								<b:Icon ui:field="mAdd0" type="SAVE" />
							</b:Tooltip>
						</b:Well>
					</b:Column>
					<b:Column size="SM_9">
						<b:NavTabs>
							<b:TabListItem dataTarget="#tab4" text="Name" active="true" ui:field="mNameTab" />
							<b:TabListItem dataTarget="#tab5" text="Display" />
							<b:TabListItem dataTarget="#tab6" text="Date" ui:field="mDateTab" />
							<b:TabListItem dataTarget="#tab7" text="Array" ui:field="mArrayTab" />
							<b:TabListItem dataTarget="#tab8" text="Lookup" ui:field="mLookupTab" />
						</b:NavTabs>
						<b:Tooltip text="Save">
							<b:Icon ui:field="mSave0" type="SAVE" paddingLeft="10" paddingRight="10" />
						</b:Tooltip>
						<b:Tooltip text="Refresh">
							<b:Icon ui:field="mRefresh0" type="REFRESH" />
						</b:Tooltip>
						<b:TabContent>
							<b:TabPane fade="true" in="true" active="true" b:id="tab4">
								<b:Well size="LARGE">
									<b:FormGroup>
										<b:FormLabel text="ID:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mId" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mName" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Type:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mType" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tab5">
								<b:Well size="LARGE">
									<b:FormGroup>
										<b:FormLabel text="Long:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mLong" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Short:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mShort" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tab6">
								<b:Well size="LARGE">
									<b:FormGroup>
										<b:FormLabel text="Storage format:" addStyleNames="{style.pad}" />
										<b:TextBox ui:field="mStorageFormat" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Example:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mStorageFormatEx" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tab7">
								<b:Well size="LARGE">
									<b:FormGroup>
										<b:FormLabel text="Array:" addStyleNames="{style.pad}" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tab8">
								<b:Well size="LARGE">
									<b:FormGroup>
										<b:FormLabel text="Location:" addStyleNames="{style.pad}" />
										<b:ListBox ui:field="mLookupLocation" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Parameters:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mLookupGroupText" />
										<b.gwt:FlowPanel ui:field="mLookupGroup" />
									</b:FormGroup>
								</b:Well>
							</b:TabPane>
						</b:TabContent>
					</b:Column>
				</b:Row>
			</b:Column>
			<b:Column size="SM_1"></b:Column>
		</b:Row>
	</b:Container>
</ui:UiBinder>