<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.select="urn:import:org.gwtbootstrap3.extras.select.client.ui" xmlns:b.toggle="urn:import:org.gwtbootstrap3.extras.toggleswitch.client.ui">
	<ui:style>
	.pad {
		padding-right: 5px;
	}
	
	.spanformat {
		padding: 5px;
		border: solid thin;
	}
	</ui:style>

	<b:Row addStyleNames="content">
		<b:Column size="SM_12" addStyleNames="text-left">
			<b:Row>
				<b:Column size="SM_3">
					<b:Well size="LARGE">
						<b.html:Paragraph emphasis="INFO" text="EDIT GROUP" />
						<b:FormGroup>
							<b:FormLabel text="Select Group:" addStyleNames="{style.pad}" />
							<b.select:Select ui:field="mGroups" liveSearch="true" visible="true" />
						</b:FormGroup>
					</b:Well>
					<b:Well size="LARGE">
						<b.html:Paragraph emphasis="INFO" text="CREATE NEW GROUP" />
						<b:FormGroup ui:field="mAddNameGrp">
							<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
							<b:Input ui:field="mAddGroup" placeholder="Enter Group Name" allowBlank="false" validateOnBlur="true" type="TEXT" />
						</b:FormGroup>
						<b:Tooltip text="Add New">
							<b:Icon ui:field="mAdd0" type="SAVE" paddingLeft="15" addStyleNames="pull-right" />
						</b:Tooltip>
					</b:Well>
				</b:Column>
				<b:Column size="SM_9">
					<b:TabPanel tabPosition="LEFT">
						<b:NavTabs>
							<b:TabListItem dataTarget="#tabg4" text="Name" active="true" />
							<b:TabListItem dataTarget="#tabg5" text="Fields" />
						</b:NavTabs>
						<b:TabContent>
							<b:TabPane fade="true" in="true" active="true" b:id="tabg4">
								<b:Well size="LARGE">
									<b.html:Paragraph emphasis="INFO" text="GROUP NAME" />
									<b:FormGroup>
										<b:FormLabel text="FGG:" addStyleNames="{style.pad}" />
										<b.html:Span ui:field="mFgg" />
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel text="Name:" addStyleNames="{style.pad}" />
										<b:Input ui:field="mName" type="TEXT" />
									</b:FormGroup>
									<b:Tooltip text="Save">
										<b:Icon ui:field="mSave0" type="SAVE" paddingLeft="10" addStyleNames="pull-right" />
									</b:Tooltip>
									<b:Tooltip text="Refresh">
										<b:Icon ui:field="mRefresh0" type="REFRESH" addStyleNames="pull-right" />
									</b:Tooltip>
								</b:Well>
							</b:TabPane>
							<b:TabPane fade="true" b:id="tabg5">
								<b:Well size="LARGE">
									<b.html:Paragraph emphasis="INFO" text="SELECT FIELDS IN GROUP" />
									<b:FormGroup>
										<b:FormLabel ui:field="mNameText" />
										<b.gwt:FlowPanel ui:field="mFields" styleName="core_columns" />
									</b:FormGroup>
									<b:Tooltip text="Save">
										<b:Icon ui:field="mSave1" type="SAVE" paddingLeft="10" addStyleNames="pull-right" />
									</b:Tooltip>
									<b:Tooltip text="Refresh">
										<b:Icon ui:field="mRefresh1" type="REFRESH" addStyleNames="pull-right" />
									</b:Tooltip>
								</b:Well>
							</b:TabPane>
						</b:TabContent>
						<b.html:ClearFix />
					</b:TabPanel>
				</b:Column>
			</b:Row>
		</b:Column>
	</b:Row>
</ui:UiBinder>